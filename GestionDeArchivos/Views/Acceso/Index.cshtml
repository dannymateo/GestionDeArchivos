@model UsuarioViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cotrafa Social</title>
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/logoC.png" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Login_cotrafa-master/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Login_cotrafa-master/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Login_cotrafa-master/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Login_cotrafa-master/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Login_cotrafa-master/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="Login_cotrafa-master/css/util.css">
    <link rel="stylesheet" type="text/css" href="Login_cotrafa-master/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    @*------ GOOGLEAR ====> form bootstrap 5 ----------------*@
    <div class="limiter">

        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="images/logoCo.png" alt="IMG">
                </div>
                <form class="login100-form validate-form asp-controller="Acceso" asp-action="Index" method="post">
                    <span class="login100-form-title">
                        Iniciar Sesión
                    </span>
                        <flash dismissable="false" />
                    <div class="wrap-input100 validate-input" data-validate="El usuario es requerido">
                        <input class="input100" placeholder="Correo" type="email" class="form-control" asp-for="Correo">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Contraseña es requerida">
                        <input class="input100" placeholder="Contraseña" id="pass" type="password" class="form-control" asp-for="Clave">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                        <button class="txt1" type="button" onclick="mostrarContrasena()"
                                style="position: absolute;display: flex;left:12%; padding: 5px 0;cursor: pointer;font-size: 14px;">
                            <i id="iconPass" class="bi bi-eye-fill"></i><p id="msjPass" style="margin-left: 19px;">Mostrar Contraseña</p>
                        </button>
                    </div>
                    <br>
                    <span asp-validation-for="Clave" class="text-danger"></span>
                    <br>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">Acceder</button>

                    </div>
                </form>

            </div>
        </div>
    </div>

    <script src="js/js.js"></script>
    <!--===============================================================================================-->
    <script src="Login_cotrafa-master/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="Login_cotrafa-master/vendor/bootstrap/js/popper.js"></script>
    <script src="Login_cotrafa-master/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="Login_cotrafa-master/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="Login_cotrafa-master/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="Login_cotrafa-master/js/main.js"></script>
</body>
</html>