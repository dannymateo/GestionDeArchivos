@model GestionDeArchivos.Data.Entities.Document

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<flash dismissable="false" />

    <div class="row">
        <div class="col-md-4  offset-md-4">
            <div class="card bg-light mb-3" style="width: 450px; height: auto">
                <h5 class="card-header text-center"><i class="fa-solid fa-envelope text-navy"></i> Editar/Eliminar Archivo</h5>
                <div class="card-body ">
                    <form asp-action="Edit" class="form1">
                                    <input type="hidden" asp-for="User" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div>
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                                            @{
                        List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
                    }
                    <div>
                        <label asp-for="Location" class="control-label"></label>
                        <select asp-for="Location" asp-items="@items" class="browser-default">
                        </select>
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Remark" class="control-label"></label>
                        <select asp-for="Remark" asp-items="@items" class="browser-default">
                        </select>
                        <span asp-validation-for="Remark" class="text-danger"></span>
                    </div>
                        <div>
                            <label asp-for="Date" class="control-label"></label>
                            <input asp-for="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div>
                        <label asp-for="DocumentStatus" class="control-label"></label>
                        <select class="browser-default" name="DocumentStatus">
                               <option value="Aprobado">Aprobado</option>
                               <option value="Revisar">Revisar</option>
                        </select>
                        </div>
                        <div class="form-group1 ">
                            <input type="submit" class="waves-effect waves-light btn-large" value="Guardar Archivo" />
                        </div>
                    </form>
                             <form asp-action="Delete" class="form1">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="           Eliminar           " class="btn btn-danger btn-large" />
            <br />
            <a asp-action="Index">volver a la lista</a>
        </form>
                </div>

            </div>
        </div>
    </div>

    @section Scripts {
    @{


        await Html.RenderPartialAsync("_ValidationScriptsPartial");

}
}