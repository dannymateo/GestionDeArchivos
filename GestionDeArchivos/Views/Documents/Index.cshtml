@model IEnumerable<GestionDeArchivos.Data.Entities.Document>
@{
    ViewData["Title"] = "Lista de Documentos";
}
<flash dismissable="true" />

<div class="row-12">
    <div class="card p-3">

            <div class="form-group row">
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Documents", new { id = 0 }, Context.Request.Scheme)' , 'Nuevo documento')" class="btn btn-success fa fa-plus-circle"><i class="fa fa-bookmark"></i> Documento</a>

            </div>
    </div>
</div>

<div class="row-12">

    <div class="card p-3">
  @await Html.PartialAsync("_ViewAll", Model)
    </div>
</div>

<!--modal placeholder. Also you can place this modal form in the _Layout.cshtml-->
<div class="modal fade in" tabindex="-1" role="dialog" data-backdrop="static" id="form-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background:#292D60">
                <h5 class="modal-title text-white"></h5>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>
<partial name="_DeleteDialog" />
@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="~/js/showmodal.js"></script>
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,

            "buttons": [{
                extend: 'excel',
                text: '<i class="fa fa-file-excel"></i>',
                className: 'btn btn-success',
                titleAttr: 'Exportar a excel'
            }, {
                extend: 'print',
                text: '<i class="fa fa-print"></i>',
                className: 'btn btn-info',
                titleAttr: 'Imprimir'

            }, {
                extend: 'pdf',
                text: '<i class="fa fa-file-pdf"></i>',
                className: 'btn btn-danger',
                titleAttr: 'Exportar a pdf'
            }]



        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
      
    });
</script>
<script>
    sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Documents/Delete/', false);
</script>
}