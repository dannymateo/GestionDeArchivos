<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cotrafa Social</title>
    <link rel="icon" type="image/png" href="~/admin-editada/dist/img/logoC.png" />

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin-editada/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin-editada/dist/css/adminlte.min.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/admin-editada/plugins/bootstrap/js/bootstrap.min.js" />
    <!-- Datatable -->
    <link rel="stylesheet" href="~/admin-editada/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin-editada/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin-editada/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/jqueryui/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <!-- -->
</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button" style="color: #3CB3C1;font-size: 20px;"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link"> <strong>@ViewData["Title"]</strong></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="Salir" style="font-size:20px;color:#3CB3C1">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-light-info position-fixed" style="background-color: #3CB3C1;">
            <!-- Brand Logo -->
            <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-link">
                <img src="~/admin-editada/dist/img/logoC.png" alt="AdminLTE Logo" class="brand-image img-circle" style="opacity: 1">
                <span class="brand-text font-weight-light" style="color: white;"> <strong> Cotrafa Social </strong></span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/admin-editada/dist/img/profile_pic.svg" class="img-circle" alt="User Image" style="border: 2px solid white;border-radius:50%;">
                    </div>
                    <div class="info">
                        @{
                            var GetCorreo = (User.Identity.Name);
                        }
                        <a href="#" class="d-block" style="color: white;">@GetCorreo</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="DashBoard" asp-action="Index">
                                    <i class="fa fa-chart-line"></i>
                                    <p>Estadísticas</p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a href="#" class="nav-link text-white">
                                <i class="nav-icon fas fa-file"></i>
                                <p>
                                    Archivos
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>

                            <ul class="nav nav-treeview">
                                @if (User.IsInRole("Administrador"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Documents" asp-action="Index" style="color:black">
                                            <i class="fas fa-stream nav-icon"></i>
                                            <p>Lista de documentos</p>
                                        </a>
                                    </li>
                                }
                                @if (User.Identity.IsAuthenticated)
                                {

                                    <li class="nav-item">

                                        <a class="nav-link" asp-area="" asp-controller="Documents" asp-action="Create" style="color:black">
                                            <i class="fas fa-folder-plus nav-icon"></i>
                                            <p>Subir documento</p>
                                        </a>
                                        <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="DocumentsUser" style="color:black">
                                            <i class="fas fa-exclamation"></i>
                                            <p>Documentos por revisar</p>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Areas" asp-action="Index" class="nav-link">
                                    <i class="fas fa-map-marker-alt nav-icon"></i>
                                    <p>
                                        Áreas
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Index" class="nav-link">
                                    <i class="fas fa-users nav-icon"></i>
                                    <p>
                                        Usuarios
                                    </p>
                                </a>
                            </li>
                        }

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content p-4">
                <partial name="_BusyIndicatorPartial" />
                @RenderBody()

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2022-2023 <a href="">JD.INC</a></strong> todos Los Derechos Reservados.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/admin-editada/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/admin-editada/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/admin-editada/dist/js/adminlte.min.js"></script>
    <!-- Datatable -->
    <script src="~/admin-editada/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin-editada/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin-editada/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/admin-editada/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/admin-editada/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/admin-editada/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/admin-editada/plugins/jszip/jszip.min.js"></script>
    <script src="~/admin-editada/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/admin-editada/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/admin-editada/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/admin-editada/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/admin-editada/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script>
        function displayBusyIndicator() {
        $('.loading').show();
        }
    </script>
    <script>
        $(window).on('beforeunload', function () {
        displayBusyIndicator();
        });
    </script>
    <!-- scripts -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
